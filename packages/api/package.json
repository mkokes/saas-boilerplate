{
  "name": "api-server",
  "description": "API Back-end",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --no-cache",
    "test:coverage": "npm test --coverage",
    "deploy:stage": "yarn now -f --local-config=.deploy/stage.json && yarn now --local-config=.deploy/stage.json alias",
    "deploy:live": "yarn now -f --local-config=.deploy/live.json && yarn now --local-config=.deploy/live.json alias",
    "release:stage": "yarn deploy:stage && yarn now rm dcabot-api-stage --safe --yes",
    "release:live": "yarn deploy:live && yarn now rm dcabot-api-live --safe --yes",
    "now": "now --team amgaventures",
    "lint": "npm run lint:js",
    "lint:js": "npm run lint:eslint -- .",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "apollo-server-koa": "^2.1.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "envalid": "^4.1.4",
    "graphql": "^14.0.2",
    "identicon.js": "^2.3.3",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.1",
    "koa-better-body": "^3.0.4",
    "koa-body": "^4.0.6",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "lodash.get": "^4.4.2",
    "logdna-bunyan": "^1.0.1",
    "moment-timezone": "^0.5.23",
    "mongoose": "^5.3.8",
    "mongoose-unique-validator": "^2.0.2",
    "now": "^13.1.2",
    "otplib": "^10.0.1",
    "p-queue": "^3.0.0",
    "php-serialize": "^2.0.1",
    "validator": "^10.9.0"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.{json,md}": [
      "prettier --config ../.prettierrc --write",
      "git add --force"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/test-coverage",
    "transform": {
      "^.+\\.js$": "<rootDir>/.jest/transform.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/.jest/setupTestFrameworkScriptFile.js"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "9",
    "babel-jest": "^23.6.0",
    "babel-jest-assertions": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "5.6.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "graphql-log": "^0.1.3",
    "husky": "^1.1.2",
    "jest": "23.6.0",
    "prettier": "1.16.1"
  }
}
