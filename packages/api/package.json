{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "APP_MODE=test jest --no-cache --detectOpenHandles",
    "test:ci": "APP_MODE=ci jest --no-cache",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "lint": "yarn lint:js",
    "lint:js": "yarn lint:eslint -- .",
    "lint:eslint": "eslint --ignore-path .gitignore",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --fix",
    "db:fixtures": "node scripts/fixtures/index.js",
    "pretty": "prettier --config .prettierrc --write \"src/**/*.js\""
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "<rootDir>/test-coverage"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@sentry/node": "5.1.2",
    "add": "^2.0.6",
    "apollo-server-koa": "^2.1.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "bunyan-syslog": "^0.3.2",
    "coinbase-commerce-node": "^1.0.0",
    "delay": "^4.1.0",
    "envalid": "^5.0.0",
    "graphql": "^14.0.2",
    "identicon.js": "^2.3.3",
    "jsonwebtoken": "^8.4.0",
    "koa": "^2.6.1",
    "koa-better-body": "^3.0.4",
    "koa-body": "^4.0.6",
    "koa-joi-router": "^6.0.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "lodash.get": "^4.4.2",
    "lodash.isempty": "^4.4.0",
    "mailchimp-api-v3": "^1.13.0",
    "mixpanel": "^0.10.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.23",
    "mongoose": "^5.3.8",
    "mongoose-shortid-nodeps": "^0.6.5",
    "mongoose-unique-validator": "^2.0.2",
    "node-mongodb-fixtures": "^3.0.1",
    "otplib": "^11.0.0",
    "p-queue": "^5.0.0",
    "php-serialize": "^3.0.0",
    "postmark": "^2.2.4",
    "validator": "^10.9.0",
    "yarn": "^1.13.0"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "9",
    "babel-jest": "^24.5.0",
    "babel-jest-assertions": "^0.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "graphql-log": "^0.1.3",
    "jest": "24.7.1"
  }
}
