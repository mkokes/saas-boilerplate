{
  "name": "saas-boilerplate",
  "private": true,
  "version": "0.1.0",
  "description": "⚡️ Boilerplate to launch SaaS projects",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:client": "(cd packages/client && npm run start)",
    "start:api": "(cd packages/api && npm run start)",
    "start:scheduler": "(cd packages/scheduler && npm run start)",
    "start:analytics": "(cd packages/analytics && npm run start)",
    "start:worker": "(cd packages/worker && npm run start)",
    "build:client": "(cd packages/client && npm run build)",
    "test:client": "(cd packages/client && npm run test)",
    "deploy:client": "(cd packages/client && netlify)",
    "deploy:api": "(cd packages/api && now)",
    "deploy:scheduler": "(cd packages/scheduler && now)",
    "deploy:analytics": "(cd packages/analytics && now)",
    "deploy:worker": "(cd packages/worker && now)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AMGAVentures/saas-boilerplate.git"
  },
  "author": "AMGA Ventures <info@amgaventures.com>",
  "contributors": [
    "Alfonso Manuel García Astorga <alfon@amgaventures.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AMGAVentures/saas-boilerplate/issues"
  },
  "homepage": "https://github.com/AMGAVentures/saas-boilerplate#readme",
  "keywords": [
    "AMGA Ventures"
  ],
  "devDependencies": {
    "lerna": "^3.5.1"
  }
}
