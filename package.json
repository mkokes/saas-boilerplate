{
  "name": "saas-boilerplate",
  "private": true,
  "version": "0.1.0",
  "description": "⚡️ Boilerplate to launch SaaS projects",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:client": "(cd packages/client && yarn start)",
    "start:api": "(cd packages/api && yarn start)",
    "start:scheduler": "(cd packages/scheduler && yarn start)",
    "start:analytics": "(cd packages/analytics && yarn start)",
    "start:worker": "(cd packages/worker && yarn start)",
    "build:client": "(cd packages/client && yarn build)",
    "test:client": "(cd packages/client && yarn test)",
    "deploy:client": "netlify",
    "deploy:api": "(cd packages/api && yarn deploy)",
    "deploy:scheduler": "(cd packages/scheduler && yarn deploy)",
    "deploy:analytics": "(cd packages/analytics && yarn deploy)",
    "deploy:worker": "(cd packages/worker && yarn deploy)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AMGAVentures/saas-boilerplate.git"
  },
  "author": "AMGA Ventures <info@amgaventures.com>",
  "contributors": [
    "Alfonso Manuel García Astorga <alfon@amgaventures.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AMGAVentures/saas-boilerplate/issues"
  },
  "homepage": "https://github.com/AMGAVentures/saas-boilerplate#readme",
  "keywords": [
    "AMGA Ventures"
  ],
  "devDependencies": {
    "lerna": "^3.5.1"
  }
}
