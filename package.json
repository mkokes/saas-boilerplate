{
  "name": "saas-boilerplate",
  "description": "⚡️ Boilerplate to launch SaaS projects",
  "homepage": "https://github.com/AMGAVentures/saas-boilerplate#readme",
  "private": true,
  "version": "0.0.1",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:website": "(cd packages/website && yarn start)",
    "start:app": "(cd packages/app && yarn start)",
    "start:api": "(cd packages/api && yarn start)",
    "start:blog": "(cd packages/blog && yarn start)",
    "start:scheduler": "(cd packages/scheduler && yarn start)",
    "start:analytics": "(cd packages/analytics && yarn start)",
    "start:worker": "(cd packages/worker && yarn start)",
    "dev:api": "(cd packages/api && yarn dev)",
    "build:website:stage": "(cd packages/website && yarn build:stage)",
    "build:website": "(cd packages/website && yarn build:live)",
    "build:app:stage": "(cd packages/app && yarn build:stage)",
    "build:app": "(cd packages/app && yarn build:live)",
    "build:blog": "(cd packages/blog && yarn build)",
    "test:app": "(cd packages/app && yarn test)",
    "deploy:api": "(cd packages/api && yarn deploy:live)",
    "deploy:api:stage": "(cd packages/api && yarn deploy:stage)",
    "deploy:scheduler": "(cd packages/scheduler && yarn deploy)",
    "deploy:analytics": "(cd packages/analytics && yarn deploy)",
    "deploy:worker": "(cd packages/worker && yarn deploy)",
    "release:api": "(cd packages/api && yarn release:live)",
    "release:api:stage": "(cd packages/api && yarn release:stage)",
    "release:scheduler": "(cd packages/scheduler && yarn release)",
    "release:analytics": "(cd packages/analytics && yarn release)",
    "release:worker": "(cd packages/worker && yarn release)"
  },
  "devDependencies": {
    "lerna": "^3.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AMGAVentures/saas-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/AMGAVentures/saas-boilerplate/issues"
  },
  "author": "AMGA Ventures <info@amgaventures.com>",
  "contributors": [
    "Alfonso Manuel García Astorga <alfon@amgaventures.com>"
  ]
}
